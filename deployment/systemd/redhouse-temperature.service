[Unit]
Description=RedHouse Temperature Collection
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=pi
WorkingDirectory=/opt/redhouse
ExecStart=/opt/redhouse/venv/bin/python /opt/redhouse/collect_temperatures.py
StandardOutput=journal
StandardError=journal
SyslogIdentifier=redhouse-temperature

[Install]
WantedBy=multi-user.target
