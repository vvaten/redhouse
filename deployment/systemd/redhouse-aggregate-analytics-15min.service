[Unit]
Description=RedHouse 15-Minute Analytics Aggregation
After=network-online.target redhouse-aggregate-emeters-5min.service
Wants=network-online.target

[Service]
Type=oneshot
User=pi
WorkingDirectory=/opt/redhouse
EnvironmentFile=/opt/redhouse/.env
ExecStart=/opt/redhouse/venv/bin/python /opt/redhouse/aggregate_analytics_15min.py
StandardOutput=journal
StandardError=journal
SyslogIdentifier=redhouse-aggregate-analytics-15min

[Install]
WantedBy=multi-user.target
